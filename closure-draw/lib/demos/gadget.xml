<?xml version="1.0" encoding="UTF-8" ?>
<Module>
  <ModulePrefs title="Closure Draw Demo"
               height="520"
               scrolling="false"
               author="WebOS Goodies"
               author_email="support@webos-goodies.jp"
               author_affiliation="WebOS Goodies"
               author_location="Tokyo, Japan"
               author_link="http://code.google.com/p/webos-goodies/">
    <Require feature="dynamic-height" />
  </ModulePrefs>
<Content type="html" view="home,profile,default,canvas"><![CDATA[

<style type="text/css">
  @import url(http://closure-draw.googlecode.com/svn/trunk/closure-draw/lib/demos/from_closure_library/css/toolbar.css);
  @import url(http://closure-draw.googlecode.com/svn/trunk/closure-draw/lib/demos/from_closure_library/css/colormenubutton.css);
  @import url(http://closure-draw.googlecode.com/svn/trunk/closure-draw/lib/demos/css/closure-draw.css);
  body { padding:0; margin:0; }
  #svgtext-div { display:none; }
</style>
<script type="text/javascript" src="http://closure-draw.googlecode.com/svn/trunk/closure-draw/lib/demos/gadget-min.js"></script>
<script type="text/javascript">
  gadgets.util.registerOnLoadHandler(function() {
    initialize();
    gadgets.window.adjustHeight();
  });
</script>
<div id="canvas"></div>
<div id="svgtext-div"><textarea id="svgtext" style="width:90%;" rows="10"></textarea></div>

]]></Content>

</Module>
